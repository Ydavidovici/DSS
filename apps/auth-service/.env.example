# .env.example
JWT_EXPIRES_IN=1h

PORT=4000

# Redis
REDIS_URL=redis://localhost:6379

# DB service (internal)
DB_SERVICE_URL=http://localhost:3002

# JWT / OIDC
JWT_ISSUER=https://auth.localhost:4000
JWT_AUDIENCE=dss-services
