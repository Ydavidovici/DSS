# Server
PORT=4000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGIN=*

# Postgres
DATABASE_URL=postgres://user:pass@localhost:5432/dss

# Redis (optional; if unset uses in-memory limiter)
REDIS_URL=redis://localhost:6379

AUTH_MODE=PEM
AUTH_ISSUER=https://dss-auth
AUTH_AUDIENCE=db-service
AUTH_PUBLIC_KEY_PATH=./keys/auth_public.pem
AUTH_PUBLIC_KEYS_DIR=./keys/

# Seeded admin (only used by seed script)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!

